{
    // @sync-ignore
    "window.zoomLevel": 1,
    // @sync-ignore
    "editor.minimap.enabled": false,
    // @sync-ignore
    "settingsSync.ignoredSettings": [
        "window.zoomLevel", "editor.minimap.enabled"
    ],
    "remote.SSH.defaultExtensions": [
        "eamodio.gitlens",
    ],
    // "vscode-neovim.neovimInitPath": "~/.config/nvim/vscode.init.vim",


    "workbench.editor.showTabs": false,
    "breadcrumbs.enabled": true,

    "terminal.integrated.cursorStyle": "line",
    "window.menuBarVisibility": "toggle",
    "workbench.iconTheme": "vscode-icons",

    "editor.accessibilitySupport": "off",
    "editor.lineNumbers": "relative",
    "editor.scrollbar.horizontal": "hidden",
    "editor.scrollbar.vertical": "hidden",
    "editor.hideCursorInOverviewRuler": true,
    "editor.mouseWheelZoom": true,
    "editor.wordWrapColumn": 100,
    "editor.cursorSmoothCaretAnimation": false,
    "editor.fontFamily": "'JetBrains Mono', 'Fantasque Sans Mono', 'Droid Sans Mono', 'monospace', 'Droid Sans Fallback'",
    "editor.fontSize": 18,
    "editor.formatOnPaste": true,
    "editor.formatOnSaveTimeout": 3000,
    "editor.formatOnSaveMode": "modifications",
    "editor.fontLigatures": true,
    "editor.minimap.maxColumn": 80,
    "editor.snippetSuggestions": "top",
    "editor.codeLensFontFamily": "Comic Sans MS",
    "editor.codeLensFontSize": 12,
    "editor.stickyTabStops": true,
    "files.maxMemoryForLargeFilesMB": 1024,
    "files.trimTrailingWhitespace": true,
    "files.autoSave": "off",
    "files.exclude": {
        "**/*.egg-info": true,
        "**/__pycache__": true,
        "**/build/": true,
        "**/_build/": true,
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/third_party/**": true,
    },
    "files.watcherExclude": {
        "**/third_party/**": true,
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "**/build/**": true,
        "**/__pycache__/**": true
    },

    // python
    "python.analysis.logLevel": "Warning",
    "python.analysis.memory.keepLibraryAst": true,
    "python.analysis.memory.keepLibraryLocalVariables": true,
    "python.formatting.blackArgs": ["--line-length", "100"],


    // formatter:
    "javascript.format.placeOpenBraceOnNewLineForFunctions": false,
    "javascript.format.placeOpenBraceOnNewLineForControlBlocks": false,
    "json.format.enable": false,

    // vim:
    "vscode-neovim.neovimExecutablePaths.linux": "/usr/bin/nvim",
    "vscode-neovim.useCtrlKeysForNormalMode": false,
    "vim.cursorStylePerMode.insert": "line",
    "vim.cursorStylePerMode.normal": "block",
    "vim.enableNeovim": true,
    "vim.neovimPath": "/usr/bin/nvim",
    "vim.hlsearch": true,
    "vim.statusBarColorControl": true,
    "vim.textwidth": 120,
    "vim.foldfix": true,
    "vim.useSystemClipboard": true,

    // vim keybindings
    "vim.leader": " ",
    "vim.normalModeKeyBindings": [
        { "before": [";"], "after": [":"] },
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        { "before": [ "<leader>", "f", "m" ], "commands": [ "workbench.action.toggleSidebarVisibility" ] },
        { "before": [ "<leader>", "n", "o" ], "commands": [ ":nohl" ] },
        { "before": [ "<leader>", "f", "D" ], "commands": [ "workbench.action.openSettings" ] },
        { "before": [ "<leader>", "c", "c" ], "commands": [ "editor.action.commentLine" ] }
    ],
    "vim.insertModeKeyBindings": [
        { "before": ["j", "j"], "after": ["<Esc>"] },
    ],
    "vim.visualModeKeyBindings": [
        // surround
        { "before": [ "s" ], "after": [ "S" ] },
        { "before": [ "L" ], "commands": [ "editor.action.smartSelect.expand" ] },
        { "before": [ "H" ], "commands": [ "editor.action.smartSelect.shrink" ] },
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        { "before": [ ">" ], "commands": [ "editor.action.indentLines" ] },
        { "before": [ "<" ], "commands": [ "editor.action.outdentLines" ] },
        { "before": [ "<leader>", "c", "c" ], "commands": [ "editor.action.blockComment" ] }
    ],

    "latex-workshop.view.pdf.viewer": "tab",

    // ui
    "workbench.colorTheme": "Monokai",
    // linenumber width
    "editor.lineNumbersMinChars": 1,
    "editor.folding": false,
    "debug.showBreakpointsInOverviewRuler": true,
    "workbench.colorCustomizations": {
        "statusBar.background": "#007acc",
        "statusBar.noFolderBackground": "#007acc",
        "statusBar.debuggingBackground": "#007acc"
    },
    "editor.glyphMargin": false,
    "[jsonc]": {
        "editor.glyphMargin": true
    },

    // UI plugins
    "bracket-pair-colorizer-2.showHorizontalScopeLine": false,
    "bracket-pair-colorizer-2.showVerticalScopeLine": false,
    "bracket-pair-colorizer-2.highlightActiveScope": false,
    "bracket-pair-colorizer-2.showBracketsInGutter": true,
    "bracket-pair-colorizer-2.colors": [
        "White", "GreenYellow", "Gold", "Orchid", "Aqua", "ForestGreen", "Tomato", "LightSkyBlue"
    ],

    // git
    "gitlens.currentLine.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.codeLens.enabled": false,
    "gitlens.statusBar.enabled": false,
    "gitlens.hovers.enabled": false,
    "gitlens.mode.statusBar.enabled": false,

    "githubPullRequests.queries": [
        {
            "label": "All",
            "query": "is:open"
        },
        {
            "label": "Assigned To Me",
            "query": "is:open assignee:${user}"
        },
        {
            "label": "Created By Me",
            "query": "is:open author:${user}"
        }
    ],
    "githubIssues.queries": [
        {
            "label": "All Issues",
            "query": "is:open repo:${owner}/${repository}"
        },
        {
            "label": "My Issues",
            "query": "default"
        },
        {
            "label": "Created Issues",
            "query": "author:${user} state:open repo:${owner}/${repository} sort:created-desc"
        },
    ],

}