# app keys..

"google-chrome-stable"
  Mod4 + c
"~/bin/background/screenshot"
  Mod4 + a
"kitty"
  Mod4 + t
"sleep .1; xdotool click 1"
  Mod4 + Return

"sh -c 'sleep 0.1; xdotool type "$(xclip -o -selection clipboard)"'"
  Mod4 + Shift + v

"rofi -show run"
  Mod4 + r
"rofi -show window"
  Mod4 + Tab
"rofi -sort -matching fuzzy -show file -modi "file:~/bin/background/rofi-file-browser $HOME/Documents/books""
  Mod4 + b

"zeal"
  Mod4 + z

#"slock"
#"gnome-screensaver-command --lock"
#  Control+Alt+Shift+l
"xkill"
  Control+Alt+Shift+k
"cd /tmp && scrot -z && sleep .5 && notify-send 'Screenshot saved to /tmp'"
  Control+Alt+Shift+a

# audio keys..
"banshee --toggle-playing"
  XF86AudioPlay
"banshee --next"
  XF86AudioNext
"banshee --previous"
  XF86AudioPrev
"banshee --stop"
  XF86AudioStop

